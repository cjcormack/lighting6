<config>
  <endpoint>
    <id>lighting:style:semantic-ui:css</id>
    <grammar>
      res:/lighting/style/semantic-ui/semantic.css
    </grammar>
    <request>
      <identifier>res:/uk/chriscormack/netkernel/lighting/desk/frontend/style/semantic-ui/semantic.css</identifier>
    </request>
    <header name="mime">
      <literal type="string">text/css</literal>
    </header>
  </endpoint>
  <endpoint>
    <id>lighting:style:semantic-ui:js</id>
    <grammar>
      res:/lighting/style/semantic-ui/semantic.js
    </grammar>
    <request>
      <identifier>res:/uk/chriscormack/netkernel/lighting/desk/frontend/style/semantic-ui/semantic.js</identifier>
    </request>
    <header name="mime">
      <literal type="string">application/javascript</literal>
    </header>
  </endpoint>

  <endpoint>
    <id>lighting:style:semantic-ui:images</id>
    <grammar>
      res:/lighting/style/semantic-ui/themes/default/assets/images/
      <group name="file-name">
        <regex type="anything"/>.png
      </group>
    </grammar>
    <request>
      <identifier>res:/uk/chriscormack/netkernel/lighting/desk/frontend/style/semantic-ui/themes/default/assets/images/[[arg:file-name]]</identifier>
    </request>
    <header name="mime">
      <literal type="string">image/gif</literal>
    </header>
  </endpoint>

  <endpoint>
    <id>lighting:style:semantic-ui:fonts:eot</id>
    <grammar>
      res:/lighting/style/semantic-ui/themes/default/assets/fonts/
      <group name="file-name">
        <regex type="anything"/>.eot
      </group>
    </grammar>
    <request>
      <identifier>res:/uk/chriscormack/netkernel/lighting/desk/frontend/style/semantic-ui/themes/default/assets/fonts/[[arg:file-name]]</identifier>
    </request>
    <header name="mime">
      <literal type="string">application/vnd.ms-fontobject</literal>
    </header>
  </endpoint>
  <endpoint>
    <id>lighting:style:semantic-ui:fonts:svg</id>
    <grammar>
      res:/lighting/style/semantic-ui/themes/default/assets/fonts/
      <group name="file-name">
        <regex type="anything"/>.svg
      </group>
    </grammar>
    <request>
      <identifier>res:/uk/chriscormack/netkernel/lighting/desk/frontend/style/semantic-ui/themes/default/assets/fonts/[[arg:file-name]]</identifier>
    </request>
    <header name="mime">
      <literal type="string">image/svg+xml</literal>
    </header>
  </endpoint>
  <endpoint>
    <id>lighting:style:semantic-ui:fonts:ttf</id>
    <grammar>
      res:/lighting/style/semantic-ui/themes/default/assets/fonts/
      <group name="file-name">
        <regex type="anything"/>.ttf
      </group>
    </grammar>
    <request>
      <identifier>res:/uk/chriscormack/netkernel/lighting/desk/frontend/style/semantic-ui/themes/default/assets/fonts/[[arg:file-name]]</identifier>
    </request>
    <header name="mime">
      <literal type="string">application/octet-stream</literal>
    </header>
  </endpoint>
  <endpoint>
    <id>lighting:style:semantic-ui:fonts:woff</id>
    <grammar>
      res:/lighting/style/semantic-ui/themes/default/assets/fonts/
      <group name="file-name">
        <regex type="anything"/>.woff
      </group>
    </grammar>
    <request>
      <identifier>res:/uk/chriscormack/netkernel/lighting/desk/frontend/style/semantic-ui/themes/default/assets/fonts/[[arg:file-name]]</identifier>
    </request>
    <header name="mime">
      <literal type="string">application/font-woff</literal>
    </header>
  </endpoint>
  <endpoint>
    <id>lighting:style:semantic-ui:fonts:woff2</id>
    <grammar>
      res:/lighting/style/semantic-ui/themes/default/assets/fonts/
      <group name="file-name">
        <regex type="anything"/>.woff2
      </group>
    </grammar>
    <request>
      <identifier>res:/uk/chriscormack/netkernel/lighting/desk/frontend/style/semantic-ui/themes/default/assets/fonts/[[arg:file-name]]</identifier>
    </request>
    <header name="mime">
      <literal type="string">font/woff2</literal>
    </header>
  </endpoint>


</config>
